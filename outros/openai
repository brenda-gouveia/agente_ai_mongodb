openapi: 3.0.3
info:
  title: Products API
  version: 1.0.0

servers:
  - url:  https://derick-unextenuating-unretrogressively.ngrok-free.dev

paths:
  /products:
    get:
      summary: Lista todos os produtos
      operationId: listProducts
      responses:
        "200":
          description: Lista de produtos
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: "#/components/schemas/Product"

components:
  schemas:
    Product:
      type: object
      properties:
        name:
          type: string
        brand:
          type: string
        price:
          type: number
        category:
          type: string
        rating:
          type: number
        best_seller:
          type: boolean
        specs:
          type: object
          additionalProperties: true