{
  "openapi": "3.0.3",
  "info": {
    "title": "TechNow",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://derick-unextenuating-unretrogressively.ngrok-free.dev"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Lista todos os produtos",
        "operationId": "listProducts",
        "responses": {
          "200": {
            "description": "Lista de produtos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/customers": {
      "get": {
        "summary": "Lista todos os clientes",
        "operationId": "listCustomers",
        "responses": {
          "200": {
            "description": "Lista de clientes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Customer"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/orders": {
      "get": {
        "summary": "Lista todos os pedidos",
        "operationId": "listOrders",
        "responses": {
          "200": {
            "description": "Lista de pedidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "brand": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "category": {
            "type": "string"
          },
          "rating": {
            "type": "number"
          },
          "best_seller": {
            "type": "boolean"
          },
          "specs": {
            "type": "object",
            "additionalProperties": true
          }
        }
      },
      "Customer": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "loyalty": {
            "type": "object",
            "properties": {
              "level": {
                "type": "string"
              },
              "points": {
                "type": "number"
              }
            }
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "customer_id": {
            "type": "string"
          },
          "products": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "product_id": {
                  "type": "string"
                },
                "quantity": {
                  "type": "number"
                }
              }
            }
          },
          "total": {
            "type": "number"
          },
          "date": {
            "type": "string"
          }
        }
      }
    }
  }
}